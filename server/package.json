    "dev": "npm run db-dev && NODE_ENV=dev tsx watch --clear-screen=false src/index.ts | pino-pretty",
    "build": "rimraf dist && npm run type-check && tsup",
    "start": "npm run migrate && node dist/index.js",
    "clean": "rimraf dist coverage",
    "lint": "eslint ./src",
    "lint:fix": "eslint ./src --fix",
    "format": "prettier --write .",
    "test": "vitest run",
    "test:dev": "vitest dev",
    "test:cov": "vitest run --coverage",
    "type-check": "tsc --noEmit"
  },
  "author": "Protofire",
  "devDependencies": {
